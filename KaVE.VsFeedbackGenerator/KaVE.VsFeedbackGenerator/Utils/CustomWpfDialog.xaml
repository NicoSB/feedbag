<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    x:Class="KaVE.VsFeedbackGenerator.Utils.CustomWpfDialog"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <CheckBox Content="Don't show again" HorizontalAlignment="Left" Margin="10,10,0,0" Name="checkbox" VerticalAlignment="Top"/>
            <Button Content="_OK" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>