<Window x:Class="KaVE.VsFeedbackGenerator.TrayNotification.UploadWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:properties="clr-namespace:KaVE.VsFeedbackGenerator.Properties"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Export Wizard">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Icon" UriSource="/KaVE.VsFeedbackGenerator;Component/Resources/question.png" />
            <Style TargetType="{x:Type Button}" x:Key="DefaultDisabledButton">
                <Style.Triggers>
                    <Trigger Property="Command" Value="{x:Null}">
                        <Setter Property="IsEnabled" Value="False" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Margin="5">
        <Label>
            <TextBlock Name="DialogText" Text="Erläuterung Upload:..." Margin="5" />
        </Label>
        <Expander Header="Anonymisierungsoptionen">
            <StackPanel Margin="10,4,0,0">
                <CheckBox Name="NamesCheckBox" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" Margin="4"
                          Content="Methoden- und Variablennamen im Feedback erfassen." />
                <CheckBox Name="StartTimeCheckBox" Margin="4"
                          Content="Auslösezeitpunkt von Events im Feedback erfassen." />
                <CheckBox Name="DurationCheckBox" Margin="4" Content="Dauer von Events im Feedback erfassen." />
                <CheckBox Name="SessionUUIDCheckBox" Margin="4"
                          Content="Zuordnung von Events zu Sessions im Feedback erfassen." />
            </StackPanel>
        </Expander>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Image Name="TypeIcon" HorizontalAlignment="Left" VerticalAlignment="Center" Source="{StaticResource Icon}"
                   Height="25" Width="25" />
            <TextBlock>
                <!-- TODO Open Sessionmanager -->
                <Hyperlink Click="On_Review_Click">
                    Feedback einsehen
                </Hyperlink>
            </TextBlock>
            <!-- TODO perhaps: include the old pics (in comments) in the button's Content -->
            <Button ToolTip="{x:Static properties:SessionManager.Export}" Margin="5" MinWidth="93"
                    Content="Zip Export..."
                    Command="{Binding Path=FeedbackViewModel.ExportSessionsCommand}" Name="Export"
                    Style="{StaticResource DefaultDisabledButton}">
                <!--<Image Source="/KaVE.VsFeedbackGenerator;Component/Resources/export.png" />-->
            </Button>
            <Button ToolTip="{x:Static properties:SessionManager.Send}" Margin="5" MinWidth="93" Content="Direktupload"
                    Command="{Binding Path=FeedbackViewModel.SendSessionsCommand}" Name="Send"
                    Style="{StaticResource DefaultDisabledButton}">
                <!--<Image Source="/KaVE.VsFeedbackGenerator;Component/Resources/send.png" /> -->
            </Button>
        </StackPanel>
    </StackPanel>
</Window>