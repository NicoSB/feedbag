<UserControl x:Class="KaVE.VS.FeedbackGenerator.UserControls.OptionPage.OptionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:root="clr-namespace:KaVE.VS.FeedbackGenerator"
             xmlns:userProfile="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.UserProfile"
             xmlns:validationRules="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.ValidationRules"
             xmlns:optionPage="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.OptionPage"
             d:DataContext="{d:DesignInstance Type=optionPage:OptionPageViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <StackPanel>
            <GroupBox Header="{x:Static root:Properties.SessionManager.Options_Export_Title}">
                <StackPanel>
                    <TextBlock Text="{x:Static root:Properties.SessionManager.Options_Export_Disclaimer}"
                               TextWrapping="Wrap" Margin="10,6,10,6" TextAlignment="Justify" />
                    <CheckBox Name="RemoveCodeNamesCheckBox"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveCodeNames}"
                              VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,6,0,0"
                              x:FieldModifier="private" />
                    <CheckBox Name="RemoveStartTimesCheckBox"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveStartTimes}"
                              VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,6,0,0"
                              x:FieldModifier="private" />
                    <CheckBox Name="RemoveDurationsCheckBox"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveDurations}"
                              VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,6,0,0"
                              x:FieldModifier="private" />
                    <CheckBox Name="RemoveSessionUUIDCheckBox"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveSessionIDs}"
                              VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,6,0,0"
                              x:FieldModifier="private" />
                    <Grid Margin="5,15,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0"
                               Content="{x:Static root:Properties.SessionManager.Options_Export_UploadUrl}"
                               Margin="0,0,0,0" />
                        <TextBox Grid.Column="1" Grid.Row="0" Name="UploadUrlTextBox"
                                 VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,0,0"
                                 x:FieldModifier="private">
                            <Binding Path="UploadUrl" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:UploadUrlValidationRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                        <Label Grid.Column="0" Grid.Row="1"
                               Content="{x:Static root:Properties.SessionManager.Options_Export_WebAccessPraefix}"
                               Margin="0,0,0,0" />
                        <TextBox Grid.Column="1" Grid.Row="1" Name="WebPraefixTextBox"
                                 VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,0,0"
                                 x:FieldModifier="private">
                            <Binding Path="WebAccessPrefix" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:WebAccessPrefixValidationRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{x:Static root:Properties.UserProfileMessages.Title}" Name="ProfileOptionsGroupBox">
                <userProfile:UserProfileGrid x:Name="UserProfileGrid" />
            </GroupBox>
            <DockPanel Margin="10,45,10,6">
                <Button Padding="15,3,15,3" HorizontalAlignment="Right" Click="RestoreSettings_OnClick">Reset Settings</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>