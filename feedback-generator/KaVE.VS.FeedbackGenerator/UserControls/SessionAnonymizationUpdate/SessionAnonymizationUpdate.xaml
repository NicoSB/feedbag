<Window x:Class="KaVE.VS.FeedbackGenerator.UserControls.SessionAnonymizationUpdate.SessionAnonymizationUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="480px"
        SizeToContent="Height"
        Title="Updated KaVE Settings">
    <StackPanel Margin="5">
        <TextBlock TextWrapping="Wrap">
            You are using the KaVE plugin to capture your interactions with the IDE. Thank you!
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
            We noticed that you configured the anonymization to removes the session id in your submissions.
            Unfortunately, we had to remove this option, because it made it incredibly hard to make sense of the data.
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
            Please visit the KaVE anonymization options now and update your preferences.
        </TextBlock>
        <DockPanel HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="100px" Click="OnOk">Ok</Button>
        </DockPanel>
    </StackPanel>
</Window>