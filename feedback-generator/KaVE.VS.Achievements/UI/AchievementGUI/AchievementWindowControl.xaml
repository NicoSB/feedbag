<UserControl x:Class="KaVE.VS.Achievements.UI.AchievementGUI.AchievementWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:achievementGui="clr-namespace:KaVE.VS.Achievements.UI.AchievementGUI"
             xmlns:const="clr-namespace:KaVE.VS.Achievements.Properties"
             mc:Ignorable="d">
    <Grid>
        <TabControl x:Name="Tab" Margin="0,25,0,0">
            <TabItem Header="{x:Static const:UIText.Category_1}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="AllPanel" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static const:UIText.Category_2}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="LatestPanel" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static const:UIText.Category_3}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="ProjectPanel" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static const:UIText.Category_4}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="CodingPanel" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static const:UIText.Category_5}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="ResharperPanel" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static const:UIText.Category_6}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <achievementGui:SortableStackPanel x:Name="FeatOfStrengthPanel" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <ComboBox x:Name="SortBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="245,0,0,0" />
        <ComboBox x:Name="FilterBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="35,0,0,0" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                   Text="{x:Static const:UIText.AchievementWindow_SortBy}" VerticalAlignment="Top" Height="22"
                   Margin="160,0,0,0" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static const:UIText.AchievementWindow_Show}"
                   VerticalAlignment="Top" Height="22" Margin="0,0,0,0" />
    </Grid>
</UserControl>