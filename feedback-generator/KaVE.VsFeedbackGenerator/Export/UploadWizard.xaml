<Window x:Class="KaVE.VsFeedbackGenerator.Export.UploadWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:properties="clr-namespace:KaVE.VsFeedbackGenerator.Properties"
        xmlns:root="clr-namespace:KaVE.VsFeedbackGenerator"
        xmlns:export="clr-namespace:KaVE.VsFeedbackGenerator.Export"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=export:UploadWizardViewModel, IsDesignTimeCreatable=False}"
        Title="{x:Static root:Properties.UploadWizard.window_title}">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Icon" UriSource="/KaVE.VsFeedbackGenerator;Component/Resources/question.png" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="5" Grid.Column="0">
            <TextBlock Text="{x:Static root:Properties.UploadWizard.description}" />
            <Expander Header="{x:Static root:Properties.SessionManager.Options_Export_Title}">
                <StackPanel Margin="10,4,0,0">
                    <CheckBox Margin="4"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveCodeNames}"
                              IsChecked="{Binding RemoveCodeNames}"/>
                    <CheckBox Margin="4"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveStartTimes}"
                              IsChecked="{Binding RemoveStartTimes}" />
                    <CheckBox Margin="4"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveDurations}"
                              IsChecked="{Binding RemoveDurations}" />
                    <CheckBox Margin="4"
                              Content="{x:Static root:Properties.SessionManager.Options_Export_RemoveSessionIDs}"
                              IsChecked="{Binding RemoveSessionIDs}" />
                </StackPanel>
            </Expander>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Visibility="Hidden" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Source="{StaticResource Icon}"
                       Height="25" Width="25" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Click="On_Review_Click">
                            <TextBlock Text="{x:Static root:Properties.UploadWizard.review_link}" />
                        </Hyperlink>
                    </TextBlock>
                    <!-- TODO perhaps: include the old pics (in comments) in the button's Content -->
                    <Button ToolTip="{x:Static properties:SessionManager.Export}" Margin="5" MinWidth="93"
                            Content="{x:Static root:Properties.UploadWizard.export_zip_button}"
                            Click="ZipButtonClicked">
                        <!--<Image Source="/KaVE.VsFeedbackGenerator;Component/Resources/export.png" />-->
                    </Button>
                    <Button ToolTip="{x:Static properties:SessionManager.Send}" Margin="5" MinWidth="93"
                            Content="{x:Static root:Properties.UploadWizard.export_upload_button}"
                            Click="UploadButtonClicked">
                        <!--<Image Source="/KaVE.VsFeedbackGenerator;Component/Resources/send.png" /> -->
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!-- EXPORT OVERLAY -->
        <Border Background="LightGray" Opacity=".9"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                Grid.Column="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                        VerticalAlignment="Center" Width="Auto">
                <TextBlock Text="{Binding BusyMessageAnimated}"
                           FontWeight="Bold" FontSize="24" />
				<TextBlock Text="{x:Static root:Properties.UploadWizard.CloseWizardDuringExportHint}"
						   FontSize="18" />
            </StackPanel>
        </Border>
    </Grid>
</Window>